                           Resizable="true">
            <TileLayoutItems>
               <TileLayoutItem HeaderText="모델별 통계" RowSpan="2"  ColSpan="2">
                    <Content>
                        <TelerikGrid Class="cpk-grid"
                                     Data="@gListCtq"
                                     ConfirmDelete="true"
                                     Pageable="false"
                                     Groupable="false"
                                     Sortable="false"
